<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% newListItem.forEach((singleItem) => {%>
        <form action="/delete" method="post">

          <div class="item">

            <input type="checkbox" value="<%= singleItem._id %>" onchange="this.form.submit()" name="checkbox">
            <p> <%= singleItem.name %> </p>

         </div>
         <input type="hidden" name="listName" value="<%= listTitle %>"></input>
       </form>
     <%})%>
       <form action="/" method="post" class="item">
         <input type="text" name="todo" placeholder="New Item" autocomplete="off">
         <button type="submit" name="list" value=<%= listTitle %>>+</button>
       </form>
    </div>
<%- include("footer") -%>
